{
  "name": "@logvault/schemas",
  "version": "0.2.2",
  "description": "Type-safe Zod schemas for LogVault audit events",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./events": {
      "types": "./dist/events/index.d.ts",
      "import": "./dist/events/index.mjs",
      "require": "./dist/events/index.js"
    },
    "./common": {
      "types": "./dist/common/index.d.ts",
      "import": "./dist/common/index.mjs",
      "require": "./dist/common/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "logvault",
    "audit",
    "logging",
    "zod",
    "schema",
    "validation",
    "typescript",
    "compliance",
    "soc2",
    "gdpr"
  ],
  "author": "LogVault <support@logvault.eu>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Rul1an/logvault-node.git",
    "directory": "packages/schemas"
  },
  "homepage": "https://logvault.eu/docs/schemas",
  "bugs": {
    "url": "https://github.com/Rul1an/logvault-node/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8",
    "zod-to-json-schema": "^3.24.1"
  },
  "peerDependencies": {
    "zod": "^3.22.0"
  }
}
